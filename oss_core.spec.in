#!BuildIgnore: post-build-checks

%if 0%{?fedora} >= 16
%define build_turn 1
%else
%define build_turn 0
%endif

Name: @PACKAGE@
Version: @VERSION@
Release: @PACKAGE_REVISION@

Summary: OS Abstraction and OS Utilities library for OSS modules
License: LGPL
Group: Development/Libraries
Vendor: OSS Software Solutions
Url: http://www.ossapp.com

BuildRequires: automake
BuildRequires: libtool
BuildRequires: gcc-c++
BuildRequires: openssl-devel
BuildRequires: libmcrypt-devel
Requires: libmcrypt
BuildRequires: libtool-ltdl-devel
Requires: libtool-ltdl
BuildRequires: pcre-devel
BuildRequires: findutils
BuildRequires: db4-devel
Requires: db4
Requires: openssl >= 0.9.7a
Requires: pcre >= 4.5
BuildRequires: iptables
BuildRequires: iproute

BuildRequires: boost-devel
Requires: boost
BuildRequires: v8-devel
Requires: v8

BuildRequires: libsrtp-devel
Requires: libsrtp

BuildRequires: libpcap-devel
Requires: libpcap

BuildRequires: libdnet-devel
Requires: libdnet

BuildRequires: xmlrpc-c-devel
Requires: xmlrpc-c
Requires: xmlrpc-c-client
Requires: xmlrpc-c-client++
Requires: xmlrpc-c-c++

BuildRequires: libevent-devel
Requires: libevent


BuildRequires: poco-devel
Requires: poco-crypto
Requires: poco-data
Requires: poco-foundation
Requires: poco-mysql
Requires: poco-net
Requires: poco-netssl
Requires: poco-odbc
Requires: poco-pagecompiler
Requires: poco-sqlite
Requires: poco-util
Requires: poco-xml
Requires: poco-zip

BuildRequires: libconfig-devel
Requires: libconfig
BuildRequires: hiredis-devel
Requires: hiredis
BuildRequires: gtest-devel
Requires: gtest

BuildRequires: leveldb-devel
Requires: leveldb

Source: %name-%version.tar.gz

Prefix: %_prefix
BuildRoot: %{_tmppath}/%name-%version-root

%description
oss_core is a high level library implementation of a SIP B2BUA
The library currently provides classes that
encapsulate functions and operations for:

    * SIP ABNF Parser
    * SIP Finite State Machines
    * SIP B2B User Agent
    * Java Script Engine using Google V8
    * SIP Over Websockets
    * STUN/TURN server
    * RTP Proxy
    * CARP High Availability


%if %{_vendor} == suse
%debug_package
%endif

# Install header files
%package devel
Requires: %name
Group: Development/Libraries
Vendor: OSS Software Solutions
Summary: Header files for %name


%description devel
oss_core is a high level library implementation of a SIP B2BUA
The library currently provides classes that
encapsulate functions and operations for:

    * SIP ABNF Parser
    * SIP Finite State Machines
    * B2BUA
    * Java Script Engine using Google V8
    * SIP Over Websockets
    * STUN/TURN server
    * RTP Proxy
    * CARP High Availability

%prep
%setup -q

%build
autoreconf -if
%if %{build_turn}
%configure @OSSLIBS_RPM_CONFIGURE_OPTIONS@
%else
%configure @OSSLIBS_RPM_CONFIGURE_OPTIONS@ --enable-turn
%endif
cp config.log %name.configlog

# Wercker docker image does not seem to like smp flags
# make %{_smp_mflags} all
make all

%install
rm -rf $RPM_BUILD_ROOT
make DESTDIR=$RPM_BUILD_ROOT install

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(644,root,root,755)
%doc CONTRIBUTORS README NEWS TODO ChangeLog %name.configlog
%attr(755,root,root) %{_bindir}/oss_*
%attr(755,root,root) %{_libdir}/liboss_core.so*
%attr(755,root,root) %{_libdir}/liboss_carp.so*

%if %{build_turn}
%attr(755,root,root) %{_libdir}/liboss_turn.so*
%endif

%files devel
%defattr(644,root,root,755)
%{_libdir}/liboss_core.la
%{_libdir}/liboss_core.a
%{_libdir}/liboss_carp.la
%{_libdir}/liboss_carp.a
%{_prefix}/opt/ossapp/libre/lib/libre.a
%{_prefix}/opt/ossapp/libre/lib/libre.so
%{_prefix}/opt/ossapp/librem/lib/librem.a
%{_prefix}/opt/ossapp/librem/lib/librem.so

%if %{build_turn}
%attr(755,root,root) %{_libdir}/liboss_turn.la
%attr(755,root,root) %{_libdir}/liboss_turn.a
%endif

%dir %attr(755,root,root) %{_includedir}/OSS
%{_includedir}/OSS/*

%dir %attr(755,root,root) %{_prefix}/opt/ossapp/libre/include
%{_prefix}/opt/ossapp/libre/include/*

%dir %attr(755,root,root) %{_prefix}/opt/ossapp/libre/share
%{_prefix}/opt/ossapp/libre/share/*

%dir %attr(755,root,root) %{_prefix}/opt/ossapp/librem/include
%{_prefix}/opt/ossapp/librem/include/*

%post


